@model Mecom.Models.Customer

<div class="row" >
    <table class="table" id="searchTextResult">
        <tr>
            <th>@Html.DisplayNameFor(m => m.name)</th>
            <th>@Html.DisplayNameFor(m => m.lastName)</th>
            <th>@Html.DisplayNameFor(m => m.phone)</th>
            <th>@Html.DisplayNameFor(m => m.email)</th>
            <th colspan="2">İşlemler</th>
        </tr>
        <tr ng-repeat="c in customers | filter:searchText">
            <td>{{ c.name }}</td>
            <td>{{ c.lastName }}</td>
            <td>{{ c.phone }}</td>
            <td>{{ c.email }}</td>
            <td><a href="@Url.Action("MusteriSil","Musteriler")\{{ c.id }}"><span class="glyphicon glyphicon-trash"></span></a></td>
            <td><a href="@Url.Action("MusteriDuzenle","Musteriler")\{{ c.id }}"><span class="glyphicon glyphicon-edit"></span></a></td>
        </tr>
    </table> 
</div>



