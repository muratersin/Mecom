@using Mecom.Models
@model Mecom.Models.LoginViewModel

@{
    ViewBag.Title = "Giris";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="row">
        <div class="llg">
            <img src="~/images/mecomLogo.png" class="logoo" />
            <section id="loginForm">
                @using (Html.BeginForm("Giris", "Kullanici", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                    <h3>Giriş Yap</h3>
                    <hr />
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre" })
                    </div>
                    <div class="form-group">
                            <input type="submit" value="Giriş" class="btn btn-info" style="width:100%" />
                    </div>
                    <div class="form-group">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                                &nbsp;
                                @Html.ActionLink("Kayıt Ol", "Kayit")
                                &nbsp;
                                @Html.ActionLink("Şifremi Unuttum", "SifremiUnuttum")
                    </div>
                }
            </section>
        </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}