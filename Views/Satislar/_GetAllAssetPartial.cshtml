@model IEnumerable<Mecom.Models.Asset>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.services.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isPaid)
        </th>
        <th>
            Satış Faturasına Eklendi
        </th>
        <th colspan="2">
            İşlemler
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.customer.fullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.services.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isPaid)
        </td>
        <td>
            @if(item.billOfSale != null)
            {
                @:Evet
            } else
            {
                @:Hayır
            }
        </td>
        <td><a href="@Url.Action("SatisSil","Satislar")\@item.id"><span class="glyphicon glyphicon-trash"></span></a></td>
        <td><a href="@Url.Action("SatisDuzenle","Satislar")\@item.id"><span class="glyphicon glyphicon-edit"></span></a></td>

    </tr>
}

</table>
