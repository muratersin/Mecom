@model Mecom.Models.Staff

<div class="row">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.lastName)</th>
            <th>@Html.DisplayNameFor(m => m.email)</th>
            <th>@Html.DisplayNameFor(m => m.phone)</th>
            <th>@Html.DisplayNameFor(m => m.profession)</th>
            <th>@Html.DisplayNameFor(m => m.salary)</th>
            <th colspan="2">İşlemler</th>
        </tr>
        <tr ng-repeat="s in staffs | filter:searchText">
            <td>{{ s.Name }}</td>
            <td>{{ s.lastName }}</td>
            <td>{{ s.email }}</td>
            <td>{{ s.phone }}</td>
            <td>{{ s.profession }}</td>
            <td>{{ s.salary }}</td>
            <td><a href="@Url.Action("CalisanSil","Calisanlar")\{{ s.id }}"><span class="glyphicon glyphicon-trash"></span></a></td>
            <td><a href="@Url.Action("CalisanDuzenle","Calisanlar")\{{ s.id }}"><span class="glyphicon glyphicon-edit"></span></a></td>
        </tr>
    </table>
</div>
