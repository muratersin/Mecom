@model Mecom.Models.Service

<div class="row">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m => m.name)</th>
            <th>@Html.DisplayNameFor(m => m.price)</th>
            <th colspan="2">İşlemler</th>
        </tr>
        <tr ng-repeat="s in services | filter:searchText">
            <td>{{ s.name }}</td>
            <td>{{ s.price }}</td>
            <td><a href="@Url.Action("ServisSil","Servisler")\{{ s.id }}"><span class="glyphicon glyphicon-trash"></span></a></td>
            <td><a href="@Url.Action("ServisDuzenle","Servisler")\{{ s.id }}"><span class="glyphicon glyphicon-edit"></span></a></td>
        </tr>
    </table>
</div>
