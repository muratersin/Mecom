@model Mecom.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "SifremiUnuttum";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="row">
    <div class="llg">
        <img src="~/images/mecomLogo.png" class="logoo" />
        @using (Html.BeginForm("SifremiUnuttum", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <h4>Şifremi Unuttum</h4>
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Bağlantıyı Gönder" />
            </div>
        }
    </div>
</div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }




