@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MeCom</title>
    @Styles.Render("~/Content/panel")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="@Url.Action("Index","Guncel")">
                            <img alt="Brand" src="~/images/mecomLogo.png" id="logo" />
                        </a>
                    </div>
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">@DateTime.Now.ToString("D") 
                                    &nbsp;&nbsp;&nbsp;&nbsp;
                                 @User.Identity.GetUserName() </a></li>
                        </ul>
                </div>
              </div>
            </nav>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-3 col-md-2" id="panelMenu" style="padding-right:0px">   
                    <ul class="nav nav-pills nav-stacked" style="width:100%">
                        <li><a href="@Url.Action("Index", "Guncel")"><span class="glyphicon glyphicon-fire"> Güncel Durum</span></a></li>
                        <li><a href="@Url.Action("Index", "Satislar")"><span class="glyphicon glyphicon-log-in"> Satışlar</span></a></li>
                        <li><a href="@Url.Action("Index", "Giderler")"><span class="glyphicon glyphicon-log-out"> Giderler</span></a></li>
                        <li><a href="@Url.Action("Index", "Calisanlar")"><span class="glyphicon glyphicon-user"> Çalışanlar</span></a></li>
                        <li><a href="@Url.Action("Index", "Musteriler")"><span class="glyphicon glyphicon-list"> Müşteriler</span></a></li>
                        <li><a href="@Url.Action("Index", "Tedarikciler")"><span class="glyphicon glyphicon-shopping-cart"> Tedarikçiler</span></a></li>
                        <li><a href="@Url.Action("Index", "Servisler")"><span class="glyphicon glyphicon-tags"> Hizmeter - Ürünler</span></a></li>
                        <li><a href="@Url.Action("AlimFaturasi", "Faturalar")"><span class="glyphicon glyphicon-list-alt"> Alım Faturası</span></a></li>
                        <li><a href="@Url.Action("SatisFaturasi", "Faturalar")"><span class="glyphicon glyphicon-list-alt"> Satış Faturası</span></a></li>
                        <li><a href="@Url.Action("Index", "Raporlar")"><span class="glyphicon glyphicon-stats"> Raporlar</span></a></li>
                    </ul>
                    <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
                </div>
            <div class="col-xs-12 col-md-9">
                @RenderBody()
            </div>
        </div>
    </div>    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @RenderSection("scripts", required: false)
</body>
</html>
