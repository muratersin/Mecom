@model Mecom.Models.RegisterViewModel
@{
    ViewBag.Title = "Kayıt";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

<div class="row">
    <div class="llg">
        <img src="~/images/mecomLogo.png" class="logoo" />
        @using (Html.BeginForm("Kayit", "Kullanici", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "Ad" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.lastName, new { @class = "form-control", placeholder = "Soyad" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.companyName, new { @class = "form-control", placeholder = "İşletme Adı" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifre" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Şifre Tekrarı" })
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-info" value="Kayıt" style="width:100%" />
            </div>
        }
    </div>
</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
