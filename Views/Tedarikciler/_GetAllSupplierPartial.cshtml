@model Mecom.Models.Supplier

<div class="row">
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(m => m.companyName)</th>
            <th>@Html.DisplayNameFor(m => m.adress)</th>
            <th>@Html.DisplayNameFor(m => m.email)</th>
            <th>@Html.DisplayNameFor(m => m.phone)</th>
            <th colspan="2">İşlemler</th>
        </tr>
        <tr ng-repeat="s in suppliers | filter:searchText">
            <td>{{ s.companyName }}</td>
            <td>{{ s.adress }}</td>
            <td>{{ s.email }}</td>
            <td>{{ s.phone }}</td>
            <td><a href="@Url.Action("TedarikciSil","Tedarikciler")\{{ s.id }}"><span class="glyphicon glyphicon-trash"></span></a></td>
            <td><a href="@Url.Action("TedarikciDuzenle","Tedarikciler")\{{ s.id }}"><span class="glyphicon glyphicon-edit"></span></a></td>
        </tr>
    </table>
</div>